---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import MV from "@/components/MV.astro";
import "@/styles/gallery.scss";

//microCMS呼び出し
import { getGallery } from "../../library/microcms";
const response = await getGallery({
  fields: ["id", "img", "description"],
});
console.log(response.contents[0].img);
---

<Layout>
  <!-- ヘッダーここから -->
  <Header />
  <!-- ヘッダーここまで -->
  <main>
    <MV title="ギャラリー" img="/official/img/media_top.webp" />
    <section id="gallery" class="p-gallery">
      <div class="container">
        <div class="p-gallery__wrapper">

          {
            response.contents.map((content: any) => (
              <!-- Modal toggle -->
              <img
                data-modal-target={content.id}
                data-modal-toggle={content.id}
                src={content.img.url} 
                alt={content.description}
              />

              <!-- Main modal -->
              <div
                id={content.id}
                tabindex="-1"
                aria-hidden="true"
                class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
              >
                <div class="relative p-4 w-full max-w-5xl max-h-full">
                  <!-- Modal content -->
                  <div class="relative bg-white rounded-lg shadow" style="background-color: #fbf0de;">
                    <!-- Modal header -->
                    <div
                      class="flex items-center justify-between p-4 md:p-5"
                    >
                      <h3
                        class="text-3xl font-semibold text-gray-900"
                      >
                        {content.description}
                      </h3>
                      <button
                        type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                        data-modal-hide={content.id}
                      >
                        <svg
                          class="w-3 h-3"
                          aria-hidden="true"
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 14 14"
                        >
                          <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
                        </svg>
                        <span class="sr-only">Close modal</span>
                      </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-4 md:p-5 space-y-4">
                      <img
                        data-modal-target={content.id}
                        data-modal-toggle={content.id}
                        src={content.img.url} alt={content.description}
                        loading="lazy"
                        class="popup-img"
                      />
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
  <!-- フッターここから -->
  <Footer />
  <!-- フッターここまで -->
</Layout>

<style>
  body {
    background-color: #fbf0de;
  }
</style>
