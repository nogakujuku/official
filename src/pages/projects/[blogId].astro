---
import Layout from "../../layouts/Layout.astro";
import { getBlogs, getBlogDetail } from "../../library/microcms";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "/src/styles/ichinen.css";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);

const title =
  blog.title + "農楽塾の一年 | 学生NPO 農楽塾公式HP | 早稲田 農業サークル";
const description =
  "農楽塾の一年の流れをご紹介します。私たちは都心で「農」を実践しながら、普段、農業を経験できない人に、その機会を提供します。土に触れ、汗を流す楽しさを知ってほしい。そして、あなたのすぐそばにある「農」について、すこしでも考えてもらいたい。それが、私たち「農楽塾」の願いです。";
const og_image = "https://nogakujuku.github.io/official/img/noukahoumon.webp";
---

<Layout title={title} description={description} og_image={og_image}>
  <main>
    <h1 class="title">{blog.title}</h1>
    <p class="publishedAt">公開日時：{blog.publishedAt}</p>
    <div class="post" set:html={blog.content} />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }
</style>
